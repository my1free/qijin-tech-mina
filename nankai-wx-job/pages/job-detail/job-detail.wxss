/* pages/seeker-detail/seeker-detail.wxss */
@import "../../fontawesome.wxss";

.job-title-all{
  width: 100%;
  display: flex;
  margin-top:10rpx;
  padding-top:20rpx;
  background-color: white;
}

.job-title-left{
  width: 500rpx;
  padding-left: 30rpx;
}

.job-title-right{
  width: 250rpx;
  display: flex;
  justify-content: center;
}

.job-head{
  height: 80rpx;
  font-size: 40rpx;
  display: flex;
  align-items:center;
}

.job-title{
  width: 400rpx;
  overflow: hidden;
}

.job-info{
  font-size: 25rpx;
  display: flex;
  color: gray;
  align-items:center;
  padding-bottom: 20rpx;
}

.job-tag{
  font-size: 15rpx;
  background: gold;
  padding: 3rpx 8rpx 3rpx 8rpx;
  border-radius:5rpx;
}

 .job-info-detail{
   width:120rpx;
   margin-right: 15rpx;
 }

 .job-salary{
   font-size: 30rpx;
   display: flex;
   align-items: center;
   color: red;
   padding: 15rpx;
 }

 .company-info{
   display: flex;
   width: 100%;
   height:120rpx;
   margin-top:10rpx;
   background-color: white;
   padding-top:15rpx;
   padding-bottom:15rpx;
 }

 .company-logo{
  width: 150rpx;
  display: flex;
  justify-content:center;
  align-items:center;
  border-right: 1rpx solid #eee;
}

.logo-style{
  width: 120rpx;
  height: 120rpx;
}

.company-description{
  width: 520rpx;
  border-right: 1rpx solid #eee;
}

.company-name{
  display: flex;
  align-items: center;
  justify-content:center;
}

.company-info-t{
  font-size:25rpx;
  height: 50rpx;
  color: gray;
  display: flex;
  justify-content:center;
  align-items: center;
}
.company-arrow{
  font-size: 80rpx;
  padding-left: 25rpx;
  color: #ddd;
}
.job-description{
  width: 100%;
  min-height: 300rpx;
  font-size: 25rpx;
  margin-top:10rpx;
  background-color: white;
}

.company-location{
  width: 100%;
  height: 170rpx;
  margin-top:10rpx;
  background-color: white;
}

.publisher{
  width: 100%;
  height: 220rpx;
  margin-top:10rpx;
  background-color: white;
  margin-bottom:220rpx;
}

.sub-title{
  font-size:30rpx;
  border-bottom: 1px solid #eee;
  height: 80rpx;
  padding-top:10rpx;
}

.sub-title-content{
  display: flex;
  padding-top: 12rpx;
  height: 60rpx;
  align-items: center;
}

.publisher-info{
  display: flex;
  height: 120rpx;
  align-items: center;
}

.publisher-avatar{
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content:center;
}

.publisher-avatar image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.footer{
  position: fixed;
  display: flex;
  width: 100%;
  bottom: 1rpx;
  height: 100rpx;
  background-color: white;
}

.footer .short-block{
  width: 160rpx;
  height: 100%;
  text-align: center;
  padding-top: 20rpx;
}

.footer .long-block{
  width: 270rpx;
  text-align: center;
  padding-top: 30rpx;
  color: white;
  background-color: red;
  border-radius: 10rpx;
}