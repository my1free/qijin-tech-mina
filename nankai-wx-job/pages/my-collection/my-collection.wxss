/* pages/my-collection/my-collection.wxss */

@import "../../fontawesome.wxss";

.job-list{
  height: 150rpx;
  width: 100%;
  margin-top:15rpx;
  display: flex;
  flex-direction: row;
  background-color: white;
}

.company-logo{
  width: 150rpx;
  display: flex;
  justify-content:center;
  align-items:center;
}

.logo-style{
  width: 100rpx;
  height: 100rpx;
}

.job-abstract{
  width: 400rpx;
}

.job-head{
  height: 80rpx;
  font-size: 30rpx;
  display: flex;
  align-items:flex-end;
}

.job-title{
  width: 300rpx;
  overflow: hidden;
}

.job-info{
  font-size: 25rpx;
  display: flex;
  color: gray;
  align-items:center;
  padding-bottom: 20rpx;
}

.job-tag{
  font-size: 15rpx;
  background: gold;
  padding: 3rpx 8rpx 3rpx 8rpx;
  border-radius:5rpx;
}

 .job-info-detal{
   width:120rpx;
   margin-right: 15rpx;
 }

 .job-salary{
   font-size: 30rpx;
   display: flex;
   align-items: center;
   color: red;
   padding: 15rpx;
 }

 .job-opr{
   display: flex;
 }

 .job-opr-list{
   width: 50%;
   background-color:white;
   border-top:1rpx dashed #eee;
   font-size:30rpx;
   text-align:center;
   padding-top:10rpx;
   padding-bottom:10rpx;
 }

 .border-right{
   border-right:1rpx dashed #eee;
 }