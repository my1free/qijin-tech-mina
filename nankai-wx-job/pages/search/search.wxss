/* pages/search/search.wxss */

@import "../../fontawesome.wxss";
@import "../../css/job-list.wxss";

.search-area{
  width: 100%;
  height: 100rpx;
  display: flex;
  background-color: white;
}

.search-city{
  width: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.search-city picker{
  width: 120rpx;
  padding-left:30rpx;
}

.search-city .search-arrow{
  color: gray;
}

.search-keyword{
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-keyword .search-btn{
  border-left: 1rpx solid #eee;
  width: 100rpx;
  height: 100rpx;
  font-size:50rpx;
  padding-top:30rpx;
}

.search-keyword input{
  width: 430rpx;
  font-size: 30rpx;  
  border-left: 1rpx solid #eee;
  margin-left: 20rpx;
}

.search-hot{
  width: 100%;
  height: 100%;
  min-height: 250rpx;
  margin-top: 50rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx dashed #ccc;
}

.search-hot .title{
  font-size: 30rpx;
  margin-left: 30rpx;
}

.search-result{
  width: 96%;
  min-height: 300rpx;
  margin-top: 10rpx;
}

.search-tag{
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.search-tag .tag-list{
  width: 150rpx;
  height: 70rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: gray;
  margin-left: 30rpx;
  margin-top: 20rpx;
  background-color: white;
  border-radius:10rpx;
}