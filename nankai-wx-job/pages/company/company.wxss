
@import "../../css/job-list.wxss";

.company-info{
  position: fixed;
  top: 0rpx;
  width: 100%;
  height: 200rpx;
  display: flex;
  background-color: white;
}

.company-info .company-logo{
  width: 200rpx;
  height: 200rpx;
  border-right: 1rpx dashed #bbb;
}

.company-info .company-logo image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 25rpx;
}

.company-desc{
  width: 100%;
  font-size:30rpx;
  padding-left: 30rpx;
}

.company-desc .company-name-title{
  margin-top: 10rpx;
}

.company-desc .company-name{
  padding-left: 20rpx;
  color: gray;
}

.job-filter{
  position: fixed;
  top: 200rpx;
  width: 100%;
  height: 250rpx;
  background-color: #eee;
  border-bottom: 1rpx dashed #bbb;
}

.job-filter .title{
  font-size: 30rpx;
  padding: 30rpx 0 0 30rpx;
}

.job-filter .tags{
  padding-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
}

.job-filter-tag{
  width: 150rpx;
  font-size: 30rpx;
  color: gray;
  background-color: white;
  border-radius:10rpx;
  text-align:center;
  margin-left:30rpx;
  padding:5rpx 0 5rpx 0;
  margin-top: 20rpx;
}

.job-list-all{
  margin-top: 220rpx;
  margin-bottom:220rpx;
}

.footer{
  position: fixed;
  display: flex;
  width: 100%;
  bottom: 1rpx;
  height: 100rpx;
  background-color: white;
}

.footer .short-block{
  width: 160rpx;
  height: 100%;
  text-align: center;
  padding-top: 20rpx;
}

.footer .long-block{
  width: 270rpx;
  text-align: center;
  padding-top: 30rpx;
  color: white;
  background-color: red;
  border-radius: 10rpx;
}